{
  "name": "api",
  "version": "0.0.1",
  "license": "GPL-3.0-or-later",
  "description": "The Praise REST API running on Node/Express, using MongoDB for storage.",
  "type": "commonjs",
  "main": "dist/index",
  "scripts": {
    "build": "tsc --project tsconfig.json && tscpaths -p tsconfig.json -s ./src -o ./dist",
    "lint": "eslint . --ext .ts",
    "start": "ts-node -r tsconfig-paths/register --transpile-only ./src",
    "start:dev": "nodemon ./src",
    "test": "ts-mocha --paths -p tsconfig.json src/**/*.spec.ts",
    "import-praise": "ts-node -r tsconfig-paths/register src/scripts/import-praise.ts",
    "replace-quantifier": "ts-node -r tsconfig-paths/register src/scripts/replace-quantifier.ts",
    "migrator": "ts-node -r tsconfig-paths/register src/scripts/umzug-cli.ts",
    "drop-database": "ts-node -r tsconfig-paths/register src/scripts/drop-database.ts"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts, html",
    "exec": "ts-node --files -r tsconfig-paths/register"
  },
  "dependencies": {
    "@awaitjs/express": "^0.9.0",
    "@types/express-fileupload": "^1.2.2",
    "@types/mime-types": "^2.1.1",
    "bin-packer": "^1.6.1",
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "date-fns": "^2.28.0",
    "dotenv": "^10.0.0",
    "dotenv-expand": "^8.0.3",
    "eslint": "^8.8.0",
    "ethers": "^5.5.2",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-fileupload": "^1.3.1",
    "faker": "^5.5.3",
    "helmet": "^4.6.0",
    "http-status-codes": "^2.1.4",
    "jet-logger": "^1.0.6",
    "json2csv": "^5.0.6",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mime-types": "^2.1.34",
    "mocha": "^9.2.0",
    "mongoose": "^6.1.2",
    "mongoose-paginate-ts": "^1.2.0",
    "morgan": "^1.10.0",
    "ts-mocha": "^9.0.2",
    "umzug": "^3.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.5",
    "@types/express": "^4.17.13",
    "@types/express-serve-static-core": "^4.17.28",
    "@types/faker": "^5.5.9",
    "@types/json2csv": "^5.0.3",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.14.179",
    "@types/mocha": "^9.1.0",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.0",
    "nodemon": "^2.0.15",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "tscpaths": "^0.0.9",
    "typescript": "^4.5.4",
    "yargs": "^17.3.1"
  }
}
