{
  "name": "Aragon Token Distribution",
  "map": {
    "item": {
      "address": "ethereumAddress",
      "amount": "scoreRealized",
      "tokenName": "context.tokenName"
    },
    "operate": [
      {
        "run": {
          "arguments": "val, context",
          "body": "return (val / context.totalPraiseScore) * context.budget;"
        },
        "on": "amount"
      }
    ],
    "each": {
      "arguments": "item, index, collection, context",
      "body": "item.tokenName = context.tokenName; return item;"
    }
  },
  "context": {
    "budget": "number",
    "token": "string"
  }
}
