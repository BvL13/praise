{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "outDir": "dist",
    "strict": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@entities/*": ["src/entities/*"],
      "@shared/*": ["src/shared/*"],
      "@services/*": ["src/services/*"],
      "@controllers/*": ["src/controllers/*"],
      "@middleware/*": ["src/middleware/*"],
      "@server": ["src/Server"]
    }
  },
  "include": ["src/**/*.ts"]
}
