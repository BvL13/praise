{
  "name": "praise_backend_js",
  "version": "0.0.0",
  "scripts": {
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "start": "ts-node -r tsconfig-paths/register --transpile-only ./src",
    "start:dev": "nodemon ./src",
    "test": "nodemon --config ./spec/nodemon.json",
    "test:no-reloading": "./node_modules/.bin/ts-node --files -r tsconfig-paths/register ./spec",
    "mongodb:start": "docker-compose up -d",
    "mongodb:clean": "docker exec -i mongodb-praise bash < ./scripts/clean-database.sh",
    "mongodb:stop": "docker-compose down",
    "discord:deploy-commands": "./node_modules/.bin/ts-node ./src/bots/discord/deploy-commands.ts",
    "import-praise": "ts-node -r tsconfig-paths/register src/scripts/import-praise.ts"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts, html",
    "exec": "./node_modules/.bin/ts-node --files -r tsconfig-paths/register ./src"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "max-len": [
        "error",
        {
          "code": 100
        }
      ],
      "no-console": 1,
      "no-extra-boolean-cast": 0,
      "@typescript-eslint/restrict-plus-operands": 0,
      "@typescript-eslint/explicit-module-boundary-types": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/no-floating-promises": 0,
      "@typescript-eslint/no-unsafe-member-access": 0,
      "@typescript-eslint/no-unsafe-assignment": 0
    }
  },
  "dependencies": {
    "@discordjs/builders": "^0.11.0",
    "@discordjs/rest": "^0.2.0-canary.0",
    "@types/faker": "^5.5.9",
    "@types/json2csv": "^5.0.3",
    "@types/mongoose": "^5.11.97",
    "bcrypt": "^5.0.1",
    "command-line-args": "^5.2.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "discord-api-types": "^0.26.1",
    "discord.js": "^13.5.1",
    "dotenv": "^10.0.0",
    "ethers": "^5.5.2",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "faker": "^5.5.3",
    "helmet": "^4.6.0",
    "http-status-codes": "^2.1.4",
    "jet-logger": "^1.0.6",
    "json2csv": "^5.0.6",
    "jsonfile": "^6.1.0",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "mongoose": "^6.1.2",
    "mongoose-paginate-ts": "^1.2.0",
    "morgan": "^1.10.0",
    "prettier": "^2.5.1",
    "randomstring": "^1.2.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/command-line-args": "^5.2.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.5",
    "@types/express": "^4.17.13",
    "@types/find": "^0.2.1",
    "@types/fs-extra": "^9.0.13",
    "@types/jasmine": "^3.10.2",
    "@types/jsonfile": "^6.0.1",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.0",
    "@types/randomstring": "^1.1.8",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "find": "^0.3.0",
    "fs-extra": "^10.0.0",
    "jasmine": "^3.10.0",
    "nodemon": "^2.0.15",
    "supertest": "^6.1.6",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.4"
  }
}
